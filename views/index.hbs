<h1>{{title}}</h1>
<div class="container">
  {{# each products }}
  <div class="row align-items-center row-border">
    <div class="col-md-8">
      <a href="/product/{{this.productcode}}">
        <h3>{{ this.name }}</h3>
      </a>
      <p class="description">{{{this.description}}}</p>
    </div>
    <div class="col-md-4 align-self-center">
      <form action="/add/{{this.id}}" method="GET">
        <div class="form-row align-items-center">
          <label for="qty">Quantity: </label>
          <select class="form-controll" name="qty">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="75">75</option>
            <option value="100">100</option>
            <option value="125">125</option>
            <option value="150">150</option>
            <option value="175">175</option>
            <option value="200">200</option>
            <option value="225">225</option>
            <option value="250">250</option>
          </select>
          <button class="btn btn-primary" type="submit">Add to cart</button>
        </div>
      </form>
      <!--<div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} CHF</div>
          <a href="/add/{{ this.id }}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart"
              aria-hidden="true"></i> Add to cart</a>
        </div>-->
    </div>
  </div>
  {{/each}}
</div>