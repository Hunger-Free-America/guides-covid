<div class="container">
    <h1>{{title}}</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="/static/img/{{sku}}.png" class="img-thumbnail"/>
        </div>
        <div class="col-md-6 align-items-center">
            <form class="form-inline" action="/add/{{sku}}" method="GET">
                <div class="form-row align-items-center">
                    <label for="qty">Quantity: </label>
                    <select class="form-controll" name="qty">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="75">75</option>
                        <option value="100">100</option>
                        <option value="125">125</option>
                        <option value="150">150</option>
                        <option value="175">175</option>
                        <option value="200">200</option>
                        <option value="225">225</option>
                        <option value="250">250</option>
                    </select>
                    <button class="btn btn-primary" type="submit">Add to cart</button>
                </div>
            </form>
            <a href="/static/PDFs/{{sku}}.pdf" download="{{title}}.pdf" class="btn btn-secondary btn-lg btn-block">Download PDF</a>
            <p>{{price}}</p>
            <p>{{description}}</p>
        </div>
    </div>
</div>